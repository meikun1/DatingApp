<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="2dp"
    android:layout_rowWeight="1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:id="@+id/parentLayout">

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/newGuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/ic_launcher_background"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_online"
            app:layout_constraintBottom_toBottomOf="@id/newGuy"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="1.5dp"
            android:id="@+id/imgOnline"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="7"
            android:maxLines="2"
            android:text="USERNAMEEEEEniodgf niorfm fnidoslkn fndkslnf vdsjnlk"
            android:textSize="10sp"
            app:layout_constraintTop_toTopOf="@id/imgOnline"
            app:layout_constraintBottom_toBottomOf="@id/imgOnline"
            app:layout_constraintStart_toEndOf="@id/imgOnline"
            android:id="@+id/txtUser"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="5"
            android:textSize="8sp"
            android:paddingStart="2dp"
            android:paddingEnd="1dp"
            android:paddingBottom="1.5dp"
            android:text="95Km"
            app:layout_constraintTop_toTopOf="@id/imgOnline"
            app:layout_constraintBottom_toBottomOf="@id/imgOnline"
            app:layout_constraintEnd_toEndOf="@id/newGuy"
            android:id="@+id/txtDistance"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
